

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_sharepointonline_name": {
            "defaultValue": "sharepointonline",
            "type": "String"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
        },
        "displayName": {
            "type": "string",
            "metadata": {
                "description": "Display Name"
            }
        },
        "sub-id": {
            "type": "string",
            "metadata": {
                "description": "Sub ID"
            }
        },
         "rg": {
            "type": "string",
            "metadata": {
                "description": "Resource group"
            }
        },
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connections_sharepointonline_name')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('displayName')]",
                "statuses": [
                    {
                        "status": "Connected"
                    }
                ],
                "customParameterValues": {},
                "nonSecretParameterValues": {},
                "createdTime": "",
                "changedTime": "",
                "api": {
                    "name": "[parameters('connections_sharepointonline_name')]",
                    "displayName": "[parameters('displayName')]",
                    "description": "SharePoint helps organizations share and collaborate with colleagues, partners, and customers. You can connect to SharePoint Online or to an on-premises SharePoint 2013 or 2016 farm using the On-Premises Data Gateway to manage documents and list items.",
                    "iconUri": "[concat('https://connectoricons-prod.azureedge.net/releases/v1.0.1588/1.0.1588.2938/sharepointonline/', parameters('connections_sharepointonline_name'), '/icon.png')]",
                    "brandColor": "#036C70",
                    "id": "[concat('/subscriptions/',parameters('sub-id'),'/providers/Microsoft.Web/locations/eastus/managedApis/sharepointonline/', parameters('connections_sharepointonline_name'))]",
                    "type": "Microsoft.Web/locations/managedApis"
                },
                "testLinks": []
            }
        }
    ]
}
